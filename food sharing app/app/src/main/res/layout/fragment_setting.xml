<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:id="@+id/backgroundRelativeLayout">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/foodimg" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/logoImageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:id="@+id/usernameEditText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:hint="Enter your username..." />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/usernameEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:id="@+id/passwordEditText"
        android:hint="Enter your password..." />

    <Button
        android:text="Sign Up"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@+id/passwordEditText"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/signupButton"
        />
    <Button
        android:text="Log Out"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@+id/phone_number_profile"
        android:layout_marginTop="40dp"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:id="@+id/logoutButton"
        />

    <TextView
        android:text="or, Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/changeSignupModeTextView"
        android:layout_alignBaseline="@+id/signupButton"
        android:layout_alignBottom="@+id/signupButton"
        android:layout_toRightOf="@+id/signupButton"
        android:layout_toEndOf="@+id/signupButton"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:textColor="@color/blue" />


    <com.google.android.gms.common.SignInButton
        android:id="@+id/google_sign_in_button"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signupButton"

        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />

    <TextView

        android:textColor="@color/black"
        android:id="@+id/profile_word1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="UserName:"
        android:textSize="20dp"
        android:paddingLeft="5dp"
        android:ems="10"
        android:layout_below="@+id/logoImageView"

        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        />
    <TextView
        android:id="@+id/user_name_profile"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Henry"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:ems="10"
        android:layout_below="@+id/logoImageView"
        android:layout_toRightOf="@id/profile_word1"
        android:layout_marginTop="40dp"
        android:layout_marginRight="0dp"
        tools:text="Your username"
        />
    <TextView

        android:textColor="@color/black"
        android:id="@+id/profile_word2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="Email:"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:ems="10"
        android:layout_below="@+id/profile_word1"

        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        />
    <TextView
        android:id="@+id/phone_number_profile"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:ems="10"
        android:textAlignment="center"
        android:layout_below="@+id/profile_word1"
        android:layout_toRightOf="@id/profile_word2"
        android:layout_marginTop="40dp"
        android:layout_marginRight="0dp"
        android:text="xxxx@bu.edu"
        />


</RelativeLayout>






