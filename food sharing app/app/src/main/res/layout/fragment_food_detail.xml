<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@color/white"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/detail_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/detail_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >

            <ImageView
                android:id="@+id/food_detail_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"

                android:layout_alignParentStart="true"
                android:layout_marginStart="2dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="17dp"
                android:background="@color/white" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/post_detail"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/post_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/detail_image"
            android:background="@color/light_gray"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            >
            <TextView
                android:textStyle="bold"
                android:id="@+id/owner_detail_label"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Owner/Requester:"

                android:textSize="15dp"
                />


            <TextView
                android:id="@+id/owner_detail_info"
                android:textAlignment="center"

                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_below="@id/owner_detail_label"
                android:background="@color/white"

                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:imeOptions="actionSend"
                android:padding="0dp"
                android:paddingLeft="5dp"
                android:textSize="15dp"
                />


            <TextView
                android:id="@+id/capacity_detail_label"
                android:layout_width="100dp"

                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/owner_detail_label"
                android:text="Capacity:"
                android:textSize="15dp"

                android:textStyle="bold" />
            <TextView
                android:id="@+id/food_detail_capacity"
                android:textAlignment="center"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@id/owner_detail_label"
                android:layout_toRightOf="@id/owner_detail_info"
                android:background="@color/white"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:imeOptions="actionSend"
                android:padding="0dp"
                android:paddingStart="5dp"
                android:textSize="15dp"
                />
            <TextView
                android:textStyle="bold"

                android:id="@+id/category_detail_label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:text="Category:"

                android:layout_toRightOf="@id/food_detail_capacity"
                android:textSize="15dp"
                />
            <TextView
                android:id="@+id/food_detail_category"
                android:textAlignment="center"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@id/owner_detail_label"
                android:layout_toRightOf="@id/food_detail_capacity"
                android:background="@color/white"
                android:layout_marginLeft="10dp"

                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:imeOptions="actionSend"
                android:padding="0dp"
                android:paddingLeft="5dp"
                android:textSize="15dp"
                />
        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/post_text2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/post_text"
            android:background="@color/light_gray"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            >
            <TextView
                android:textStyle="bold"
                android:id="@+id/detail_description_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Input food Description:"

                android:textSize="15dp"
                />


            <TextView
                android:id="@+id/food_detail_description"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/detail_description_label"
                android:layout_alignParentStart="true"

                android:layout_marginTop="2dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="2dp"
                android:background="@color/white"
                android:imeOptions="actionSend"
                android:padding="0dp"
                android:textSize="15dp" />
        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/post_text3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/post_text2"
            android:background="@color/light_gray"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            >
            <TextView
                android:textStyle="bold"
                android:id="@+id/phone_number_detail_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number:"

                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/phone_number_detail_info"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/phone_number_detail_label"
                android:layout_alignParentStart="true"
                android:background="@color/white"

                android:layout_marginRight="0dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:imeOptions="actionSend"
                android:padding="0dp"
                android:textSize="15dp"
                android:paddingLeft="5dp"/>


        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/post_text4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/post_text3"
            android:layout_marginTop="10dp"
            android:background="@color/light_gray"
            android:padding="10dp">

            <TextView
                android:id="@+id/address_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:textSize="15dp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/address_detail_info"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/address_detail"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp"
                android:layout_marginRight="0dp"

                android:layout_marginBottom="2dp"
                android:background="@color/white"
                android:imeOptions="actionSend"
                android:padding="0dp"
                android:paddingLeft="5dp"
                android:textAlignment="center"
                android:textSize="15dp" />


        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
